@model IEnumerable<Restaurant.Areas.Admin.MVModels.MVAccounts>

@{
    ViewData["Title"] = "Index";
}
<div class="pagetitle ">
    <h1>Accounts</h1>
    <hr />

    <div class="">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item active">Account Manage </li>
        </ol>
    </div>
    <div class="r_dir">
        <a asp-action="Register" asp-controller="Accounts" value="Create" class="btn btn-primary ">Create</a>
    </div>
    <br />
</div>
<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">

                    <table class="table datatable">
                        <thead>
                            <tr class="">
                                <th>
                                    @Html.DisplayNameFor(model => model.email)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.username)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.user_image)
                                </th>

                                <th>
                                    Option
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.username)
                                </td>
                                <td>
                                    <img width="50" height="20" class="clk_img" src="~/User_img/@item.user_image" />
                                </td>
                                <td class="td_option">
                                    <a title="Edit" asp-action="Edit" asp-route-id="@item.id">
                                        <img src="~/pen.png" png" width="30" height="30" />
                                    </a>

                                    @*<button type="button" class="btn btn-info " data-toggle="modal" data-target="#myModal">Open Modal</button>*@

                                    <a id="myModal" class="deleteItem" href="#" data-target="#basic"
                                       data-toggle="modal"
                                       data-path="@Url.Action("Delete", "Accounts", new { id = @item.id })">
                                        <img src="~/1398919_close_cross_incorrect_invalid_x_icon.png" png" title="Delete" height="25" />
                                    </a>










                                <td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="modal fade" id="basic" tabindex="-1" role="basic" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Delete Confirmation</h4>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this item?
            </div>
            <div class="modal-footer">
                <button data-dismiss="modal" type="button" class="btn btn-default">Cancel</button>
                <button id="btnContinueDelete" type="button" class="btn btn-primary">Delete</button>
            </div>
        </div>
    </div>
</div>

