
@model Restaurant.Areas.Admin.MVModels.MVAccounts


@{
    ViewData["Title"] = "Edit";
}

<div class="pagetitle ">
    <h1>Accounts</h1>
    <hr />
    <div class="">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item active"><a asp-action="Index" asp-controller="Accounts">Account Manage </a></li>
            <li class="breadcrumb-item active">Edit</li>
        </ol>
    </div>
</div>
<div class="card-body">
    <div>
        <div class="card">

            <div class="row m_input">
                <div class="">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div class="col-2">
                            <img class="card-img-right example-card-img-responsive  im_change" src="~/User_img/@Model.user_image" width="200" height="200" />
                        </div>
                        <div class="col-6">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group d-none">
                            <label asp-for="PassWord" class="control-label"></label>
                            <input asp-for="PassWord" class="form-control" />
                            <span asp-validation-for="PassWord" class="text-danger"></span>
                        </div>
                        <div class="row " style="padding:20px">
                            <div class="form-group d-none">
                                <label asp-for="id" class="control-label"></label>
                                <input asp-for="id" class="form-control" />
                                <span asp-validation-for="id" class="text-danger"></span>
                            </div>
                            <div class="row  col-md-12">
                                <label asp-for="username" class="col-sm-3 col-form-label bold"></label>
                                <div class="col-sm-9 m_auto">
                                    <input autofocus asp-for="username" class="form-control" />
                                    <span asp-validation-for="username" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row  col-md-12">
                                <label asp-for="email" class="col-sm-3 col-form-label bold"></label>
                                <div class="col-sm-9 m_auto">
                                    <input autofocus asp-for="email" class="form-control" />
                                    <span asp-validation-for="email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row  col-md-12">
                                <label asp-for="user_image" class="col-sm-3 col-form-label bold"></label>
                                <div class="col-sm-9">

                                    <input type="file" asp-for="File" class="form-control file_change" />
                                    <span asp-validation-for="File" class="text-danger"></span>
                                    <input type="hidden" asp-for="user_image" />
                                </div>

                            </div>

                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </div>
                            </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">&laquo; Previous</a>
</div>
