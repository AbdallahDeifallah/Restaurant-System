@model Restaurant.Areas.Admin.MVModels.MVSystemSetting

@{
    ViewData["Title"] = "Edit";
}
<div class="pagetitle ">
    <h1>SystemSetting</h1>
    <hr />
    <div class="">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item active"><a asp-action="Index" asp-controller="SystemSetting">Manage SystemSetting</a></li>
            <li class="breadcrumb-item active">Edit</li>
        </ol>
    </div>
</div>
<div class="card-body">
    <div>
        <div class="card flex-row">

            <div class="row m_input">
                <div class="col-md-6">
                    <form asp-action="Edit" enctype="multipart/form-data">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row " style="padding:20px">
                            <div class="form-group d-none">
                                <label asp-for="SystemSettingId" class="control-label"></label>
                                <input asp-for="SystemSettingId" class="form-control" />
                                <span asp-validation-for="SystemSettingId" class="text-danger"></span>
                            </div>
                            <div class="form-group d-none">
                                <label asp-for="CreateId" class="control-label"></label>
                                <input asp-for="CreateId" class="form-control" />
                                <span asp-validation-for="CreateId" class="text-danger"></span>
                            </div>
                            <div class="form-group d-none">
                                <label asp-for="CreateDate" class="control-label"></label>
                                <input asp-for="CreateDate" class="form-control" />
                                <span asp-validation-for="CreateDate" class="text-danger"></span>
                            </div>
                            <div class="row  col-md-12">
                                <label asp-for="SystemSettingWelcomeNoteTitle" class="col-sm-3 col-form-label bold"></label>
                                <div class="col-sm-9">
                                    <input autofocus asp-for="SystemSettingWelcomeNoteTitle" class="form-control" />
                                    <span asp-validation-for="SystemSettingWelcomeNoteTitle" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row  col-md-12">
                                <label asp-for="SystemSettingCopyright" class="col-sm-3 col-form-label bold"></label>
                                <div class="col-sm-9">

                                    <input asp-for="SystemSettingCopyright" class="form-control" />
                                    <span asp-validation-for="SystemSettingCopyright" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row  col-md-12">
                                <label asp-for="SystemSettingMapLocation" class="col-sm-3 col-form-label bold"></label>
                                <div class="col-sm-9">

                                    <input asp-for="SystemSettingMapLocation" class="form-control" />
                                    <span asp-validation-for="SystemSettingMapLocation" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row  col-md-12">
                                <label asp-for="SystemSettingWelcomeNoteBreef" class="col-sm-3 col-form-label bold"></label>
                                <div class="col-sm-9">

                                    <input asp-for="SystemSettingWelcomeNoteBreef" class="form-control" />
                                    <span asp-validation-for="SystemSettingWelcomeNoteBreef" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row  col-md-12">
                                <label asp-for="SystemSettingWelcomeNoteDesc" class="col-sm-3 col-form-label bold"></label>
                                <div class="col-sm-9">

                                    <input asp-for="SystemSettingWelcomeNoteDesc" class="form-control" />
                                    <span asp-validation-for="SystemSettingWelcomeNoteDesc" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row  col-md-12">
                                <label asp-for="SystemSettingWelcomeNoteUrl" class="col-sm-3 col-form-label bold"></label>
                                <div class="col-sm-9">

                                    <input asp-for="SystemSettingWelcomeNoteUrl" class="form-control" />
                                    <span asp-validation-for="SystemSettingWelcomeNoteUrl" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row  col-md-12">
                                <label asp-for="SystemSettingLogoImageUrl" class="col-sm-3 col-form-label bold"></label>
                                <div class="col-sm-9">

                                    <input type="file" asp-for="File_logo1" class="form-control file_change" />
                                    <span asp-validation-for="File_logo1" class="text-danger"></span>
                                    <input type="hidden" asp-for="SystemSettingLogoImageUrl" />
                                </div>

                            </div>
                            <div class="row  col-md-12">
                                <label asp-for="SystemSettingLogoImageUrl2" class="col-sm-3 col-form-label bold"></label>
                                <div class="col-sm-9">

                                    <input type="file" asp-for="File_logo2" class="form-control file_change" />
                                    <span asp-validation-for="File_logo2" class="text-danger"></span>
                                    <input type="hidden" asp-for="SystemSettingLogoImageUrl2" />
                                </div>

                            </div>
                            <div class="row  col-md-12">
                                <label asp-for="SystemSettingWelcomeNoteImageUrl" class="col-sm-3 col-form-label bold"></label>
                                <div class="col-sm-9">

                                    <input type="file" asp-for="File_Welcome" class="form-control file_change" />
                                    <span asp-validation-for="File_Welcome" class="text-danger"></span>
                                    <input type="hidden" asp-for="SystemSettingWelcomeNoteImageUrl" />
                                </div>

                            </div>

                            <div class="row  col-md-12 d-none">
                                <label asp-for="IsActive" class="col-sm-3 col-form-label bold"></label>
                                <div class="col-sm-9 m_auto">

                                    <div class="form-check form-switch">


                                        @if (@Model.IsActive == true)
                                        {
                                            <input class="form-check-input" asp-for="IsActive" type="checkbox" id="flexSwitchCheckChecked" checked>

                                        }
                                        else if (Model.IsActive == false)
                                        {
                                            <input class="form-check-input" asp-for="IsActive" type="checkbox" id="flexSwitchCheckDefault">

                                        }
                                    </div>

                                </div>
                            </div>


                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">&laquo; Previous</a>
</div>

