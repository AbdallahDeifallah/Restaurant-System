@model IEnumerable<Restaurant.Models.SystemSetting>

@{
    ViewData["Title"] = "Index";
}
<div class="pagetitle ">
    <h1>SystemSetting</h1>
    <hr />
    <div class="">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item active">Manage SystemSetting</li>
        </ol>
    </div>
    <div class="r_dir">
        <a asp-action="Create" asp-controller="SystemSetting" value="Create" class="btn btn-primary ">Create</a>
    </div>
    <br />
</div>
<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">

                    <table class="table datatable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.SystemSettingWelcomeNoteTitle)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SystemSettingWelcomeNoteUrl)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.SystemSettingWelcomeNoteBreef)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SystemSettingCopyright)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SystemSettingMapLocation)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SystemSettingWelcomeNoteImageUrl)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SystemSettingLogoImageUrl)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SystemSettingLogoImageUrl2)
                                </th>

                                <th colspan="4">
                                    Option
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SystemSettingWelcomeNoteTitle)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SystemSettingWelcomeNoteUrl)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.SystemSettingWelcomeNoteBreef)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SystemSettingCopyright)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SystemSettingMapLocation)
                                </td>
                                <td>
                                    <img width="30" height="20" class="clk_img" src="~/System_img/@item.SystemSettingWelcomeNoteImageUrl" />

                                </td>
                                <td>
                                    <img width="30" height="20" class="clk_img" src="~/System_img/@item.SystemSettingLogoImageUrl" />

                                </td>
                                <td>
                                    <img width="30 height="20" class="clk_img" src="~/System_img/@item.SystemSettingLogoImageUrl2" />

                                </td>

                                <td class="td_option">
                                    <a title="Edit" asp-action="Edit" asp-route-id="@item.SystemSettingId">
                                        <img src="~/pen.png" height="25" />
                                    </a>
                                </td>
                                <td class="td_option">
                                    <a id="myModal" class="deleteItem" href="#" data-target="#basic"
                                       data-toggle="modal"
                                       data-path="@Url.Action("Delete", "SystemSetting", new { id = @item.SystemSettingId })">
                                        <img src="~/1398919_close_cross_incorrect_invalid_x_icon.png" title="delete" height="25" />
                                    </a>
                                </td>
                                    @if (item.IsActive == true)
                                    {
                            <td class="td_option">
                                <a title="IsActive" asp-action="Update_Active" asp-route-id="@item.SystemSettingId">
                                    <i class="fa fa-check-circle" aria-hidden="true"></i>
                                </a>
                            </td>
                                        }
                                        else @if (item.IsActive == false)

                                        {
                            <td class="td_option">
                                <a title="IsActive" asp-action="Update_Active" asp-route-id="@item.SystemSettingId">
                                    <i class="fa fa-eye-slash" aria-hidden="true"></i>
                                </a>
                            </td>
                                            }

                                        <td>

                                    </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="modal fade" id="basic" tabindex="-1" role="basic" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Delete Confirmation</h4>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this item?
            </div>
            <div class="modal-footer">
                <button data-dismiss="modal" type="button" class="btn btn-default">Cancel</button>
                <button id="btnContinueDelete" type="button" class="btn btn-primary">Delete</button>
            </div>
        </div>
    </div>
</div>

