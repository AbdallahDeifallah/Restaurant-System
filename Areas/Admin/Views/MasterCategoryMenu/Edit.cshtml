@model Restaurant.Areas.Admin.MVModels.MVMasterCategoryMenu

@{
    ViewData["Title"] = "Edit";
}

<div class="pagetitle ">
    <h1>Category Item</h1>
    <hr />
    <div class="">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li class="breadcrumb-item active"><a asp-action="Index" asp-controller="MasterCategoryMenu">Manage Category</a></li>
            <li class="breadcrumb-item active">Edit</li>
        </ol>
    </div>
</div>
<div class="card-body">
    <div>
        <div class="card">

            <div class="row m_input">
                <div class="col-md-6">
                    <form asp-action="Edit" enctype="multipart/form-data">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row " style="padding:20px">
                            <div class="form-group d-none">
                                <label asp-for="MasterCategoryMenuId" class="control-label"></label>
                                <input asp-for="MasterCategoryMenuId" class="form-control" />
                                <span asp-validation-for="MasterCategoryMenuId" class="text-danger"></span>
                            </div>
                            <div class="form-group d-none">
                                <label asp-for="CreateId" class="control-label"></label>
                                <input asp-for="CreateId" value="@User." class="form-control" />
                                <span asp-validation-for="CreateId" class="text-danger"></span>
                            </div>
                            <div class="form-group d-none">
                                <label asp-for="IsDelete" class="control-label"></label>
                                <input asp-for="IsDelete" class="form-control" />
                                <span asp-validation-for="IsDelete" class="text-danger"></span>
                            </div>
                            <div class="form-group d-none">
                                <label asp-for="CreateDate" class="control-label"></label>
                                <input asp-for="CreateDate" class="form-control" />
                                <span asp-validation-for="CreateDate" class="text-danger"></span>
                            </div>
                            <div class="row  col-md-12">
                                <label asp-for="MasterCategoryMenuName" class="col-sm-4 col-form-label bold"></label>
                                <div class="col-sm-8 m_auto">
                                    <input autofocus asp-for="MasterCategoryMenuName" class="form-control" />
                                    <span asp-validation-for="MasterCategoryMenuName" class="text-danger"></span>
                                </div>
                            </div>


                            <div class="row  col-md-12 d-none">
                                <label asp-for="IsActive" class="col-sm-4 col-form-label bold"></label>
                                <div class="col-sm-8 m_auto">

                                    <div class="form-check form-switch">


                                        @if (@Model.IsActive == true)
                                        {
                                            <input class="form-check-input" asp-for="IsActive" type="checkbox" id="flexSwitchCheckChecked" checked>

                                        }
                                        else if (Model.IsActive == false)
                                        {
                                            <input class="form-check-input" asp-for="IsActive" type="checkbox" id="flexSwitchCheckDefault">

                                        }
                                    </div>

                                </div>
                            </div>


                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">&laquo; Previous</a>
</div>
